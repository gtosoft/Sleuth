    <Button android:id="@+id/btnLock" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:background="@drawable/web20buttonbackground" 
    	android:layout_alignParentTop="true" 
    	android:layout_alignParentLeft="true" 
    	android:text="LOCK" 
    	android:padding="5sp"/>
    	
    <Button android:id="@+id/btnUnLock" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_toRightOf="@id/btnLock"
	    android:background="@drawable/web20buttonbackground" 
	    android:text="UNLOCK" 
	    android:padding="5sp"/>

    <TextView android:id="@+id/tvstate" android:text="tvstate" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/btnUnLock"/>
   
	<ScrollView android:layout_height="fill_parent" android:layout_width="wrap_content" android:layout_below="@id/tvstate">
		<TextView  android:id="@+id/tvMain" android:text="tvMain" android:layout_width="fill_parent" android:layout_height="wrap_content"  />
    </ScrollView>
     
</RelativeLayout>